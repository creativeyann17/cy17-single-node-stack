<configuration>

    <!-- Stop output INFO at start -->
    <statusListener class="ch.qos.logback.core.status.NopStatusListener" />

    <property name="LOG_PATTERN"    value="%d{yyyy-MM-dd'T'HH:mm:ss.SSSXXX} %5level --- [%15.15thread] %-30.30logger{30} : %msg%n" />
    <property name="LOG_ROOT"       value = "./logs" />
    <property name="LOG_FILE_NAME"  value = "app" />

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
      <file>${LOG_ROOT}/${LOG_FILE_NAME}.log</file>
      <encoder>
        <pattern>${LOG_PATTERN}</pattern>
      </encoder>
      <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
        <fileNamePattern>${LOG_ROOT}/${LOG_FILE_NAME}-%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
        <maxFileSize>10MB</maxFileSize>
        <maxHistory>10</maxHistory> <!-- days -->
        <totalSizeCap>100MB</totalSizeCap>
      </rollingPolicy>
    </appender>

    <logger name="com.creativeyann17" level="INFO"/>
    <logger name="io.vertx.ext.cluster.infinispan.InfinispanClusterManager" level="INFO"/>"

    <root level="info">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="FILE" />
    </root>
</configuration>
